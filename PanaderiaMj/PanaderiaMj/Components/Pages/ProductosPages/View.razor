@page "/ViewProductos"
@page "/ViewProductos/{ProductoId:int}"
@inject ProductosServices productosService
@inject InsumosService insumosService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Detalles de Producto</PageTitle>

@if (producto != null)
{
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3><strong>View de Productos</strong></h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8">
                                <div class="col-md-11">
                                    <h3 class="text-center"><strong>Datos del Producto</strong></h3>
                                    <div class="border-primary border-2 borde">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-2">
                                                    <div class="text-center">
                                                        <img src="~/Images/agregarproducto.png" />
                                                    </div>
                                                    <div class="col-9">
                                                        <ul class="list-unstyled" style="margin-top: 20px; margin-bottom: 20px;">
                                                            <li><strong>ProductoId: @producto.ProductoId</strong></li>
                                                            <li><strong>Nombre: @producto.Nombre</strong></li>
                                                            <li><strong>Descripcion: @producto.Descripcion</strong></li>
                                                            <li><strong>Fecha Creacion: @producto.FechaCreacion</strong></li>
                                                            <li><strong>Precio Producto: @producto.PrecioProducto</strong></li>
                                                            <li><strong>Cantidad : @producto.CantidadAProducir</strong></li>
                                                            <li><strong>Nota:  @producto.Nota</strong></li>
                                                        </ul>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3><strong>Detalle del producto</strong></h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Insumo</th>
                                        <th>Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in producto.ProductosDetalle)
                                    {
                                        var insumo = InsumosList.FirstOrDefault(i => i.InsumoId == detalle.InsumoId);
                                        <tr>
                                            <td>@(detalle != null ? producto.Nombre : "No encontrado")</td>
                                            <td>@detalle.Cantidad</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <p>Compra no encontrada.</p>
}
@code {
    [Parameter]
    public int ProductoId { get; set; }
    public Productos producto { get; set; } = new Productos();
    public List<Insumos> InsumosList { get; set; } = new List<Insumos>();

    protected override async Task OnInitializedAsync()
    {
        producto = await productosService.GetProductos(ProductoId);
        if (producto != null)
        {
            InsumosList = await insumosService.Listar(t => true);
        }
    }
    public void Volver()
    {
        navigationManager.NavigateTo("/IndexProductos");
    }
}
